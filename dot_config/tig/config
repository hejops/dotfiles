# set diff-highlight        = true
# set refresh-interval      = 3
# set refresh-mode          = periodic
set ignore-case           = smart-case
set main-view             = line-number:no,interval=5 id:yes date:default author:full,width=0,maxwidth=10 commit-title:yes,graph,refs,overflow=no
set main-view-date        = custom
set main-view-date-format = "%Y-%m-%d %H:%M"
set mouse                 = yes
set mouse-scroll          = 5
set tab-size              = 4
set wrap-lines            = yes

# set blame-view	= author:no file-name:auto id:yes,color line-number:no,interval=5 text
# set grep-view	= file-name:no line-number:yes,interval=1 text
# set main-view	= line-number:no,interval=5 id:no author:full commit-title:yes,graph,refs,overflow=no
# set refs-view	= line-number:no id:no date:default author:full ref commit-title
# set stash-view	= line-number:no,interval=5 id:no date:default author:full commit-title
# set status-view	= line-number:no,interval=5 status:short file-name
# set tree-view	= line-number:no,interval=5 mode author:full file-size date:default id:no file-name

# show untracked files in one dir as a dir like `git status` instead of multiple files
set status-show-untracked-dirs = false

bind generic ? view-help
bind generic h view-close
bind generic l enter
bind main G move-last-line
bind main gg move-first-line

color cursor			black	white	bold
color title-focus		black	white	bold
