	# PRAGMA cache_size = 2000;
	# PRAGMA journal_mode = WAL;
	# PRAGMA journal_size_limit = 67108864; -- 64 megabytes
	# PRAGMA mmap_size = 134217728; -- 128 megabytes
	# PRAGMA synchronous = NORMAL;

	if [[ -f $1 ]]; then
		< "$2" sqlite3 "$1"
	else
		echo "$2" | sqlite3 "$1"
	fi
	# echo "Not a file: $1"
}

