# docker {{{

doslow() {
	: list slowest steps in a docker log

	# set -eu
	if
		steps=$(
			< "$1" grep -P '^#\d+ DONE' |
				# sort -k3nr | head -n$n # n slowest steps
				sort -Vu | awk '!a[$1]++' # steps >= 100 secs
		) && [[ -n $steps ]]
	then
		paste <(echo "$steps") <(
			<<< "$steps" cut -d' ' -f1 |
				while read -r n; do
					< "$1" grep "$n" |
						tac |
						grep -Pm1 "$n \[" |
						cut -d' ' -f2-
				done
		)
	else
		echo all ok
	fi
}

docl() {
	sudo docker system prune
	sudo docker volume ls -f dangling=true -q | xargs sudo docker volume rm
}

dostop() {
	docker ps --all --quiet | xargs docker stop
}

dorm() {
	mapfile -t containers < "$(docker ps --all --quiet)"
	docker stop "${containers[@]}"
	docker rm "${containers[@]}"
}

