_complete_pacman_pkgs() {
	# shellcheck disable=SC2329
	f() { pacman --query --search | grep -P "^local/$1" | cut -d' ' -f1 | cut -d/ -f2; }
	_base_completer f
}

complete -F _complete_pacman_pkgs lp
complete -F _complete_pacman_pkgs rem
