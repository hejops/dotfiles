for p in "${paths[@]}"; do
	echo "$PATH" | grep -Fq "$p" && continue
	[[ -d $p ]] &&
		# export PATH=$p:$PATH # prepend (more problematic, esp with venvs)
		export PATH=$PATH:$p # append
done
